name: ship_trajectory_prediction

conda_env: model_fitting_environment.yml  # Points to your updated environment file

entry_points:
  train_model:
    parameters:
      model_type: {type: str, choices: ['bi_lstm', 'bi_lstm_attention', 'long_term_fusion']}
      dataset_name: {type: str, choices: ['new_york']}  # Your dataset names
      hours_out: {type: int, default: 3, choices: [1, 2, 3]}
    command: 'python src/train.py --model_type {model_type} --dataset_name {dataset_name} --hours_out {hours_out}'
  
  tune_model:
    parameters:
      model_type: {type: str, choices: ['bi_lstm', 'bi_lstm_attention', 'long_term_fusion']}
      dataset_name: {type: str, choices: ['new_york', 'san_francisco']}
    command: 'python src/tune.py --model_type {model_type} --dataset_name {dataset_name}'
  
  preprocess_data:
    parameters:
      dataset_name: {type: str, choices: ['new_york']}
      time_gap: {type: int, default: 30}
    command: 'python src/preprocess.py --dataset_name {dataset_name} --time_gap {time_gap}'
